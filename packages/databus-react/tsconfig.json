{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["es2017", "es7", "es6", "dom", "dom.iterable"],
    "declaration": true,
    "outDir": "lib",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "skipLibCheck": true,
    "strictFunctionTypes": false
  },
  "exclude": ["node_modules", "lib"]
}
